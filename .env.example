# ====================================
# Environment Configuration
# ====================================

# Application
# ====================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="AromaChat"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Supabase
# ====================================
NEXT_PUBLIC_SUPABASE_URL=your-supabase-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_JWT_SECRET=your-supabase-jwt-secret
SUPABASE_DATABASE_PWD=your-supabase-database-pwd

# NextAuth.js
# ====================================
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3000

# Authentication Providers (managed by Supabase)
# ====================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GraphQL (managed by Hasura)
# ====================================
# Hasura GraphQL
HASURA_GRAPHQL_URL=your-hasura-graphql-url
HASURA_GRAPHQL_ADMIN_SECRET=your-hasura-graphql-admin-secret

# OpenAI
# ====================================
# AI
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-3-small  # or text-embedding-3-large, text-embedding-ada-002

# GitHub OAuth (optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Database (Managed by Supabase MCP)
# ====================================
DATABASE_URL=postgres://user:password@localhost:5432/aromachat

# Storage (Managed by Supabase Storage)
# ====================================
S3_UPLOAD_KEY=your-s3-upload-key
S3_UPLOAD_SECRET=your-s3-upload-secret
S3_UPLOAD_BUCKET=your-s3-bucket-name
S3_UPLOAD_REGION=your-s3-region

# Feature Flags
# ====================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_MAINTENANCE=false

# API Keys (optional)
# ====================================
# SENTRY_DSN=your-sentry-dsn
# STRIPE_SECRET_KEY=your-stripe-secret-key
# STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# Rate Limiting
# ====================================
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# Logging
# ====================================
NEXT_PUBLIC_ENABLE_LOGGING=true
LOG_LEVEL=debug

# CORS
# ====================================
NEXT_PUBLIC_CORS_ORIGIN=http://localhost:3000

# Security Headers
# ====================================
NEXT_PUBLIC_CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:;"
NEXT_PUBLIC_PERMISSIONS_POLICY="camera=(), microphone=(), geolocation=(), interest-cohort=()"
NEXT_PUBLIC_REFERRER_POLICY="strict-origin-when-cross-origin"
NEXT_PUBLIC_X_FRAME_OPTIONS="DENY"
NEXT_PUBLIC_X_CONTENT_TYPE_OPTIONS="nosniff"
NEXT_PUBLIC_X_XSS_PROTECTION="1; mode=block"

# Feature Toggles (optional)
# ====================================
# NEXT_PUBLIC_ENABLE_NEW_FEATURE=false
# NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURE=false
